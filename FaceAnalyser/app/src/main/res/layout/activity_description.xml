<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akshay.faceanalyser.MainActivity">

    <Button
        android:id="@+id/pickImg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="pick"
        android:onClick="PickCLicked1"
        app:layout_constraintTop_toBottomOf="@+id/imageView1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/analyze1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="analyze"
        android:onClick="AnalyzeClicked1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView1" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="378dp"
        android:layout_height="326dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginLeft="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textView1"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"

        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/previous"
        android:layout_marginRight="151dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="previous"
        android:layout_marginTop="23dp"
        android:onClick="PreviousClicked"
        app:layout_constraintTop_toBottomOf="@+id/imageView1"
        app:layout_constraintLeft_toRightOf="@+id/analyze1"
        android:layout_marginLeft="43dp" />
</android.support.constraint.ConstraintLayout>
